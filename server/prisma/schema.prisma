generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId       String @id @default(uuid())
  name         String
  email        String @unique
  password     String
  refreshToken String? @unique
  tasks        Task[]
}

model Task {
  taskId  String   @id @default(uuid())
  title   String
  status  Statuses
  content String
  userId  String
  user    User     @relation(fields: [userId], references: [userId])
}

enum Statuses {
  Todo
  InProgress
  Completed
}
